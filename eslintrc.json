{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single",
            { "avoidEscape": true }
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "comma-spacing": ["warn", {"before": false, "after": true}],
        "object-curly-spacing": ["warn", "always"]
    }
}
